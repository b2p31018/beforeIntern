<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="text-center">記事の編集</h1>
      
      <%= form_with(model: @article, url: users_article_path(@article), method: :patch) do |form| %>
        <div class="form-group">
          <%= form.label :タイトル %>
          <%= form.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :内容 %>
          <%= form.text_area :content, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :画像 %><br>
          <%= form.file_field :image, class: "form-control-file" %>
        </div>
        <div class="text-center mt-3">
          <%= form.submit "更新する", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="text-left mt-3">
        <%= link_to "戻る", users_article_path(@article), class: "btn btn-secondary" %>
      </div>

    </div>
  </div>
</div>
